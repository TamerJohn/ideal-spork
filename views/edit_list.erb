<section id="todos">
  <header>
    <h2>Editing "<%= @list[:name] %>"</h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_id %>/delete" method="post">
          <label hidden for="delete">Delete List</label>
          <button type="submit" name="delete" id="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>
<form action="/lists/<%= @list_id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Edit the name for the list:</label>
    </dt>
      <dd>
        <input type="text" name="list_name" id="list_name" value="<%= params[:list_name] || @list[:name] %>">
      </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @list_id %>">Cancel</a>
  </fieldset>
</form>