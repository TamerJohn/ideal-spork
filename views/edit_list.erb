<section id="todos">
  <header>
    <h2>Editing "<%= @list[:name] %>"</h2>
    <ul>
      <li>
        <form action="/lists/<%= @list[:id] %>/delete" method="post" class="delete">
          <label hidden for="delete">Delete List</label>
          <button type="submit" class="delete" id="delete" name="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>
<form action="/lists/<%= @list[:id] %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Edit the name for the list:</label>
    </dt>
      <dd>
        <input type="text" name="list_name" id="list_name" value="<%== params[:list_name] || @list[:name] %>">
      </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @list[:id] %>">Cancel</a>
  </fieldset>
</form>
